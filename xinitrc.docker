git clone git@github.com:kunst1080/dotfiles.git $HOME/local/dotfiles
$HOME/local/dotfiles/links.sh x11

export TERM='xterm-256color'

sleep 2

# display setting
is_dual_display() {
    xrandr | grep " connected " | grep HDMI
}
if is_dual_display ; then
    # big display is Left
    xrandr --output LVDS1 --brightness 0.8
    xrandr --output HDMI1 --mode 1920x1200 --left-of LVDS1
else
    xmodmap -e 'pointer = 1 2 3 5 4 6 7 8 9 10 11 12'
fi
xmodmap ~/.Xmodmap
